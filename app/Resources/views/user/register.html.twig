{% extends 'base.html.twig' %}

{% block main %}
    <form name="register" action="{{ path('user_register') }}" method="post">
        Username: <label>
            <input type="text" name="user[email]"/>
        </label><br />
        Password: <label>
            <input type="text" name="user[password]"/>
        </label><br />
        Full name: <label>
            <input type="text" name="user[fullName]"/>
        </label><br />

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('register') }}"/><br />
        <input type="submit" value="Register"/>
    </form>
{% endblock %}
